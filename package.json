{
  "name": "@eljs/node-utils",
  "version": "0.3.2",
  "description": "a collection of node utils",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "typings": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.@(js|ts)' --fix && npm-ensure -t deps",
    "prettier": "prettier --write 'lib/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --forceExit --colors",
    "coverage": "jest --coverage",
    "watch": "tsc -w",
    "build": "rimraf lib && tsc --sourceMap false",
    "prerelease": "npm run lint && npm run test:once && npm run build",
    "release": "release",
    "release:quick": "release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chnliquan/node-utils"
  },
  "keywords": [
    "node",
    "utility"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "src/**/*"
      ]
    }
  },
  "dependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@types/co": "^4.6.2",
    "@types/download": "^6.2.4",
    "@types/ejs": "^3.0.4",
    "@types/ini": "^1.3.30",
    "@types/inquirer": "^7.3.0",
    "@types/mkdirp": "^0.5.2",
    "@types/parse-json": "^4.0.0",
    "@types/read": "0.0.28",
    "@types/require-from-string": "^1.2.0",
    "@types/resolve": "0.0.8",
    "@types/rimraf": "^2.0.3",
    "@types/signale": "^1.4.1",
    "@types/uuid": "^3.4.5",
    "@types/which": "^1.3.2",
    "cd": "^0.3.3",
    "chalk": "^3.0.0",
    "co": "^4.6.0",
    "conventional-changelog": "^3.1.21",
    "debug": "^4.1.1",
    "download": "^7.1.0",
    "ejs": "^3.1.3",
    "execa": "^5.1.1",
    "ini": "^1.3.5",
    "inquirer": "^7.2.0",
    "minimist": "^1.2.5",
    "mkdirp": "^0.5.1",
    "moment": "^2.29.1",
    "ora": "^4.0.3",
    "parse-json": "^5.0.0",
    "read": "^1.0.7",
    "require-from-string": "^2.0.2",
    "resolve": "^1.13.1",
    "rimraf": "^3.0.0",
    "semver": "^6.3.0",
    "signale": "^1.4.0",
    "urllib": "^2.36.1",
    "uuid": "^3.3.3",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@eljs/release": "^0.4.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "npm-ensure": "^1.2.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "author": "chnliquan",
  "publishConfig": {
    "registry": "https://registry.npmjs.org "
  },
  "license": "MIT"
}
