{
  "name": "@enderlee/node-utils",
  "version": "0.1.0",
  "description": "a collection of node utils",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "typings": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.@(js|ts)' --fix && npm-ensure -t deps",
    "prettier": "prettier --write 'lib/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --forceExit --colors",
    "coverage": "jest --coverage",
    "watch": "tsc -w",
    "build": "rimraf lib && tsc",
    "prerelease": "npm run lint && npm run test:once && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chnliquan/release-npm"
  },
  "keywords": [
    "node",
    "utility"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{bin,src,test}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "npm-ensure -t deps",
      "git add"
    ]
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "bin/**/*",
        "src/**/*"
      ]
    }
  },
  "dependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "chalk": "^4.1.0",
    "new-github-release-url": "^1.0.0",
    "semver": "^7.3.2",
    "open": "^7.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.10.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "conventional-changelog": "^3.1.21",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "inquirer": "^7.2.0",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "npm-ensure": "^1.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "author": "chnliquan",
  "publishConfig": {
    "registry": "http://registry.npmjs.org "
  },
  "license": "ISC"
}
